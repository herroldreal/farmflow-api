{
	"name": "farmflow-api",
	"version": "0.0.1",
	"description": "Cattle Farm Management API App",
	"private": true,
	"main": "dist/index.js",
	"author": {
		"email": "realherrold@gmail.com",
		"name": "Herrold H. Real",
